<session-config>
    <tracking-mode>COOKIE</tracking-mode>

    <servlet>
        <servlet-name>ControllerServlet</servlet-name>
        <servlet-class>main.java.controller.SelectNotesServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SelectNotesServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/Error.jsp</location>
    </error-page>
</session-config>